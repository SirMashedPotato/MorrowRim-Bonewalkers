	<!--
		Grave curses reduce over time
		They can be tended to reduce faster
	-->
 
	<HediffDef Abstract="True" ParentName="InfectionBase" Name="MorrowRim_GraveCurseBase">
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.4, 0.6, 1.0)</defaultLabelColor>
		<makesSickThought>false</makesSickThought>
		<makesAlert>true</makesAlert>
		<minSeverity>0</minSeverity>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>-1</lethalSeverity>
		<initialSeverity>0.001</initialSeverity>
		<tendable>true</tendable>
		<comps>
		  <li Class="HediffCompProperties_TendDuration">
			<baseTendDurationHours>48</baseTendDurationHours>
			<severityPerDayTended>-1.0</severityPerDayTended>
		  </li>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>-1.5</severityPerDayNotImmune>
		  </li>
		</comps>
	</HediffDef>
	
