<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
	<HediffDef ParentName="InfectionBase">
		<defName>MorrowRim_BrownRotDisease</defName>
		<label>brown rot</label>
		<description>An infectious disease solely contracted from reanimated dead, such as bonewalkers and bonelords. While initial symptons are relatively mild, victims with advanced infections are rather unpleasant to look at.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.8, 0.6, 0.4)</defaultLabelColor>
		<makesSickThought>true</makesSickThought>
		<makesAlert>true</makesAlert>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.001</initialSeverity>
		<tendable>true</tendable>
		<comps>
		  <li Class="HediffCompProperties_TendDuration">
			<baseTendDurationHours>48</baseTendDurationHours>
			<severityPerDayTended>-1.0</severityPerDayTended>
			<disappearsAtTotalTendQuality>3</disappearsAtTotalTendQuality>
		  </li>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>0.25</severityPerDayNotImmune>
		  </li>
		</comps>
		<stages>
		  <li>
			<painOffset>0.1</painOffset>
			<restFallFactorOffset>1</restFallFactorOffset>
			<capMods>
			  <li>
				<capacity>Manipulation</capacity>
				<offset>-0.1</offset>
			  </li>
			  <li>
				<capacity>Talking</capacity>
				<offset>-0.1</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
		    <minSeverity>0.5</minSeverity>
			<painOffset>0.2</painOffset>
			<label>advanced</label>
			<restFallFactorOffset>1</restFallFactorOffset>
			<capMods>
			  <li>
				<capacity>Manipulation</capacity>
				<offset>-0.2</offset>
			  </li>
			  <li>
				<capacity>Talking</capacity>
				<offset>-0.2</offset>
			  </li>
			</capMods>
			<statOffsets>
				<PawnBeauty>-2</PawnBeauty>
			</statOffsets>
		  </li>
		</stages>
	</HediffDef>
 
</Defs>