<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<HediffDef>
		<defName>MorrowRim_BonewalkerAwakening</defName>
		<label>animation sickness</label>
		<description>The result of a servants body acclimating to life after activation. Will pass over time.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(1.0, 0.4, 0.4)</defaultLabelColor>
		<makesSickThought>true</makesSickThought>
		<lethalSeverity>1</lethalSeverity>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.3</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<label>lesser</label>
				<minSeverity>0.0</minSeverity>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>middling</label>
				<minSeverity>0.3</minSeverity>
				<painOffset>0.25</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>greater</label>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.5</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<!-- -->
	<HediffDef>
		<defName>MorrowRim_BonewalkerPassive</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>dead nervous system</label>
		<description>A completely dead nervous system, caused by the reanimation of dead flesh. Provides complete resistance to pain.</description>
		<defaultLabelColor>(1,1,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<painFactor>0</painFactor>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>MorrowRim_BonewalkerBonelordShield</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>ethereal barrier</label>
		<description>A barrier, created by bonelords, deflects nearly all damage. The barrier will weaken each time it absorbs an impact, eventually collapsing the barrier once enough blows are absorbed. Weapons made of silver seem highly effective at this.</description>
		<defaultLabelColor>(1,1,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>1.0</initialSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>1</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
			<li Class="MorrowRim_Bonewalkers.HediffCompProperties_BonelordShield">
				<severityDecrease>0.01</severityDecrease>
				<stuffWeaknessesMultiplier>3</stuffWeaknessesMultiplier>
				<stuffWeaknesses>
					<li>Silver</li>
				</stuffWeaknesses>
			</li>
		</comps>
		<stages>
			<li>
				<label>inactive</label>
			</li>
			<li>
				<label>active</label>
				<minSeverity>0.6</minSeverity>
				<capMods>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>-0.75</IncomingDamageFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
</Defs>